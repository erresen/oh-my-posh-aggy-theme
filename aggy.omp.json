{
    "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
    "blocks": [
        {
            "type": "prompt",
            "alignment": "left",
            "segments": [
                {
                    "type": "exit",
                    "style": "diamond",
                    "foreground": "#292d3e",
                    "background": "#f07178",
                    "leading_diamond": "\ue0b2",
                    "trailing_diamond": "\ue0b0",
                    "properties": {
                        "template": "x {{ .Text }}"
                    }
                }
            ]
        },
        {
            "type": "prompt",
            "alignment": "left",
            "segments": [
                {
                    "type": "path",
                    "style": "diamond",
                    "foreground": "#d0d0d0",
                    "background": "#292d3e",
                    "leading_diamond": "\ue0b2",
                    "properties": {
                        "prefix": "",
                        "style": "full"
                    }
                },
                {
                    "type": "git",
                    "style": "plain",
                    "foreground": "#ffcb6b",
                    "background": "#292d3e",
                    "properties": {
                        "fetch_status": true,
                        "fetch_upstream_icon": true,
                        "template": "{{ .HEAD }}{{ if .Staging.Changed }}<#c3e88d> ● {{ .Staging.String }}</>{{ end }}{{ if .Working.Changed }}<#f07178> ● {{ .Working.String }}</>{{ end }}"
                    }
                },
                {
                    "type": "text",
                    "style": "diamond",
                    "background": "#292d3e",
                    "trailing_diamond": "\ue0b0",
                    "properties": {
                        "text": "\u200b"
                    }
                }
            ]
        },
        {
            "type": "prompt",
            "alignment": "right",
            "segments": [
                {
                    "type": "time",
                    "style": "diamond",
                    "foreground": "#d0d0d0",
                    "background": "#292d3e",
                    "leading_diamond": "\ue0b2",
                    "trailing_diamond": "\ue0b0",
                    "properties": {
                        "time_format": "2006-01-02 15:04:05"
                    }
                }
            ]
        },
        {
            "type": "prompt",
            "alignment": "left",
            "newline": true,
            "segments": [
                {
                    "type": "root",
                    "style": "diamond",
                    "foreground": "#292d3e",
                    "background": "#ffcb6b",
                    "leading_diamond": "\ue0b6",
                    "trailing_diamond": "\ue0b4"
                },
                {
                    "type": "text",
                    "style": "plain",
                    "foreground": "#d0d0d0",
                    "properties": {
                        "text": "\u276F"
                    }
                }
            ]
        }
    ],
    "final_space": true
}